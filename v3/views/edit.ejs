<%- include("partials/header") %>

<h1 class="ui main huge header centered">Welcome to Editing</h1>
<div class="ui main text container segment">
    <div class="ui huge header">Editing the Blog: <%= blog.name %></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="name" placeholder="Name" value="<%= blog.name %>">
        </div>
        <div class="field">
            <label>Image Url</label>
            <input type="text" name="url" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Body</label>
            <textarea type="text" name="des"><%= blog.des %></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>

</div>
<%- include("partials/footer") %>