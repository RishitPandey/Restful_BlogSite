<%- include("partials/header") %>
<div class="container">
    <h1>Add a Comment to the:<%= blog.name %></h1>
    <form class="form-control" action="/blogs/<%= blog._id %>/comments" method="POST">
        <input type="text" name="comment[text]" placeholder="Comment">
        <input type="text" name="comment[author]" placeholder="Name">
        <button class="btn btn-primary">Submit</button>
    </form>
</div>



