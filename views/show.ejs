<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">BlogSite</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= blog.image %>" alt="No Image">
                <div class="caption-full">
                    <h4 class="pull-right">
                        <%= blog.created.toDateString() %>
                    </h4>
                    <h4><a href=""><%= blog.name %></a></h4>
                    <p class="description">
                        <%= blog.des %>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/blogs/<%= blog._id %>/comments/new">Leave a review</a>
                </div>
                <hr>
                <% blog.comments.forEach(function (comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    
                    <% }); %>
            </div>
        </div>
    </div>

    <div class="ui top attached segment" style="display: grid;">
        <div class="ui centered medium rounded image">

        </div>


        
    </div>
    <a class="ui blue button" href="/blogs/<%= blog._id %>/edit">Edit</a>
    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button">Delete</button>
    </form>
    <a class="ui green button" href="/blogs">Home</a>
</div>

<%- include("partials/footer") %>